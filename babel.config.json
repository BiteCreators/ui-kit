{
  "presets": [
    [
      "@babel/preset-env",
      {
        "modules": false
      }
    ],
    [
      "@babel/preset-react",
      {
        "runtime": "automatic"
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    [
      "@babel/plugin-transform-runtime",
      {
        "useESModules": true
      }
    ],
    [
      "css-modules-transform",
      {
        "extensions": [".css"],
        "generateScopedName": "[name]__[local]___[hash:base64:5]",
        "keepImport": true
      }
    ]
  ],
  "ignore": ["**/node_modules/react/**/*", "**/node_modules/react-dom/**/*"]
}
